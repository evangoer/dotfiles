{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "settings": {
        "ecmascript": 6,
        "jsx": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": 0,
        "comma-dangle": [2, "never"],
        "curly": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "indent": 2,
        "max-depth": [2, 2],
        "max-statements": [2, 6],
        "no-plusplus": 2,
        "no-use-before-define": 2,
        "no-undef": 2,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 1,
        "no-unused-vars": 2,
        "no-underscore-dangle": 0,
        "quotes": 0,
        "strict": 0,
        "wrap-iife": 2
    }
}
